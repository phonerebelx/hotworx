<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center_vertical"
                android:text="@string/registered_member"
                android:layout_weight="3"
                android:textColor="@color/mirage"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="end"
                android:text="@string/select_all"
                android:layout_weight="1"
                android:textColor="@color/sunset_orange"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/listMainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp"
            android:backgroundTint="@color/white"
            android:layout_below="@id/header_layout"
            android:elevation="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/imgCircle"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    app:shape_roundRect_bottomLeftRadius="@dimen/_6sdp"
                    app:shape_roundRect_bottomRightRadius="@dimen/_6sdp"
                    app:shape_roundRect_topLeftRadius="@dimen/_6sdp"
                    app:shape_roundRect_topRightRadius="@dimen/_6sdp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no"
                        android:layout_gravity="center"
                        tools:src="@drawable/registeredmember"
                        android:scaleType="centerCrop" />

                </io.github.florent37.shapeofview.shapes.CircleView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="2"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_11ssp"
                        tools:text="@string/text" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCheck"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/imgcheck"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/no"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>

