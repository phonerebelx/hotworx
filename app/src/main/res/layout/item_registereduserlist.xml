<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/listMainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/text"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorStart"
                android:textSize="@dimen/_9ssp"
                android:layout_marginHorizontal="@dimen/_3sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:layout_weight="1">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/imgCircle"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    app:shape_roundRect_bottomLeftRadius="@dimen/_6sdp"
                    app:shape_roundRect_bottomRightRadius="@dimen/_6sdp"
                    app:shape_roundRect_topLeftRadius="@dimen/_6sdp"
                    app:shape_roundRect_topRightRadius="@dimen/_6sdp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no"
                        android:layout_gravity="center"
                        tools:src="@drawable/registeredmember"
                        android:scaleType="centerCrop" />

                </io.github.florent37.shapeofview.shapes.CircleView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:maxLines="2"
                            android:layout_weight="1"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/_11ssp"
                            tools:text="@string/text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgCheckBox"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/square_small"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/no"/>

                    <ImageView
                        android:id="@+id/imgCheck"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/check"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:contentDescription="@string/no"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>

