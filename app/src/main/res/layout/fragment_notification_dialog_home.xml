<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.notifications.NotificationDialogHomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_gradient_color_white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="end">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="top|center"
                android:src="@drawable/hotworks_heading"/>

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_gravity="center"
                android:src="@drawable/cancel_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBanner"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_170sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@color/transparent"
                app:cardCornerRadius="8dp"

                android:elevation="10dp">
            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@color/colorGray" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="@string/Text"
                android:gravity="center"
                android:maxLines="5"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_5sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@color/transparent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp">


                <Button
                android:id="@+id/btnDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="View Details"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>