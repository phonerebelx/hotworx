<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_8sdp"
        android:scaleType="fitXY"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/txt_subHead"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="left"
        android:src="@drawable/hotworks_heading" />

    <TextView
        android:id="@+id/txt_subHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/ivBrivo"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_70sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="right"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/ivSync"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_40sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="right"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ivPassio"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_70sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="#333334"
        android:src="@drawable/ic_food_scanner"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="right"
        android:scaleType="fitXY" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/notification_bell"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/flView"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/tvNotificationNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="bottom|end"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/shape_notification"
                android:textSize="@dimen/_5sdp"
                android:layout_marginStart="1dp"
                android:textColor="@color/colorWhite"
                android:text="100"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>