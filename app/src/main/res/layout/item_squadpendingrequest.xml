<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/listMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        android:background="@color/white"
        android:elevation="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/imgCircle"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_gravity="center"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no"
                        android:background="@color/transparent_orange"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:contentDescription="@string/no"
                        android:layout_gravity="center"
                        tools:src="@drawable/listicon"
                        android:scaleType="centerCrop" />

                </io.github.florent37.shapeofview.shapes.CircleView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="@string/text"
                            android:maxLines="2"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/_13ssp"
                            android:layout_marginHorizontal="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvSentAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/text"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:fontFamily="@font/regular"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginHorizontal="@dimen/_5sdp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/declineBtn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:text="@string/decline"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/bebasneue_regular"
                    android:textColor="@color/white"
                    android:background="@drawable/multicolor_background"
                    android:backgroundTint="@color/colorDarkRed"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AcceptBtn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:backgroundTint="@color/green"
                    android:text="@string/accept"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/bebasneue_regular"
                    android:textColor="@color/white"
                    android:background="@drawable/multicolor_background" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>

