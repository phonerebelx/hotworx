    <androidx.cardview.widget.CardView
        android:id="@+id/listMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:background="@color/white"
        android:elevation="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="vertical"
            android:background="@drawable/shape_rectangle_orange_outline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1">

                    <io.github.florent37.shapeofview.shapes.RoundRectView
                        android:id="@+id/imgCircle"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        app:shape_roundRect_bottomLeftRadius="@dimen/_6sdp"
                        app:shape_roundRect_bottomRightRadius="@dimen/_6sdp"
                        app:shape_roundRect_topLeftRadius="@dimen/_6sdp"
                        app:shape_roundRect_topRightRadius="@dimen/_6sdp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/no"
                            android:background="@color/transparent_orange"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/imgIcon"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:contentDescription="@string/no"
                            android:layout_gravity="center"
                            tools:src="@drawable/listicon"
                            android:scaleType="centerCrop" />
                    </io.github.florent37.shapeofview.shapes.RoundRectView>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="("
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/colorRed"/>

                        <TextView
                            android:id="@+id/counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/Text"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/colorRed"/>


                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/iconLayout"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@color/colorRed">

                    <ImageView
                        android:id="@+id/addButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/no"
                        android:src="@drawable/plusicon"
                        android:scaleType="centerInside" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>

