<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:buttonTint="@color/colorBlack" />

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Sun"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_holo_black"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/this_dropdown_is_for_gender"
                android:entries="@array/hours_array"
                android:gravity="center"
                android:hint="@string/username"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_holo_black"
            android:gravity="center">

<!--            <Spinner-->
<!--                android:id="@+id/start_date_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_weight="1"-->
<!--                android:background="@null"-->
<!--                android:contentDescription="@string/this_dropdown_is_for_gender"-->
<!--                android:entries="@array/time_array"-->
<!--                android:gravity="center"-->
<!--                android:hint="@string/username"-->
<!--                android:textAlignment="center"-->

<!--                android:dropDownHorizontalOffset = "30dp"-->
<!--                android:dropDownVerticalOffset = "30dp"-->
<!--                android:textAppearance="?android:attr/textAppearanceSmall" />-->

            <TextView
                android:id="@+id/start_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="09:00 AM"
                android:clickable="true"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_holo_black"
            android:gravity="center">

            <TextView
                android:id="@+id/end_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="09:00 AM"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>
<!--</RelativeLayout>-->

</RelativeLayout>