<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_leader_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/hotsquad_list"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/_14ssp"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/text_color"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_one"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_440sdp"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:spanCount="2"
            tools:listitem="@layout/item_myhotsquadlist"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateSquad"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_14sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/multicolor_background"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/create_hotsquad"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/montserrat_bold" />

    <RelativeLayout
        android:id="@+id/newUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/squadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotsquad_list_detail"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_13ssp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/text_color_black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateHotsquad"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:layout_below="@id/squadText"
            android:padding="@dimen/_14sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/multicolor_background"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/create_hotsquad"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/montserrat_bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNoListFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/regular"
        tools:text="@string/text"
        android:textColor="@color/colorBurned"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>
