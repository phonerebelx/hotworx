<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Pending_request"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/_13ssp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text_color"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            app:tabIndicatorHeight="0dp"
            app:tabIndicatorFullWidth="true"
            app:tabMode="fixed"
            android:layout_marginHorizontal="@dimen/_25sdp"
            app:tabGravity="fill"
            app:tabBackground="@drawable/requestmember_tab_selector"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/silverChalice"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            android:textSize="@dimen/_5sdp"
            bind:tabRippleColor="@android:color/transparent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/paymentTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/squad_request" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/salesTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_request" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp" />

    </LinearLayout>
</layout>
