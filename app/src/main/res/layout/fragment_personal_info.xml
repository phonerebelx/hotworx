<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:editable="false"
            android:gravity="center"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/cursor_custom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:orientation="vertical">

                <EditText
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/per_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@drawable/cursor_custom" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:orientation="vertical">

                <EditText
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/per_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@drawable/cursor_custom" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:editable="false"
            android:gravity="center"
            android:hint="@string/emai"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/cursor_custom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:editable="false"
            android:gravity="center"
            android:hint="@string/address"
            android:inputType="textMultiLine"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/cursor_custom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Spinner
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/gender_array"
            android:gravity="center"
            android:hint="@string/username"
            android:paddingBottom="5dp"
            android:contentDescription="@string/this_dropdown_is_for_gender"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textAlignment="center" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/dropdown"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="@string/dob" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="Height (Inches)"
            android:paddingBottom="5dp"
            android:inputType="numberDecimal"
            android:paddingTop="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/cursor_custom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/per_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="Weight (lbs)"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="numberDecimal"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/cursor_custom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#B2B2B2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/per_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_round_button"
            android:gravity="center"
            android:text="@string/save"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
