<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_top_round_fill_white"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="center_vertical"
                    android:text="@string/search_user"
                    android:layout_weight="1"
                    android:textColor="@color/sunset_orange"
                    android:textSize="@dimen/_13ssp" />

                <ImageView
                    android:id="@+id/crossIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end"
                    android:src="@drawable/cross"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:layout_gravity="center_vertical"
                        android:text="@string/registered_member"
                        android:layout_weight="1"
                        android:textColor="@color/mirage"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/SendInvite"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:background="@drawable/multicolor_background"
                        android:text="@string/send_invite"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/bebasneue_regular" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:spanCount="2"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_registereduserlist"/>

                <TextView
                    android:id="@+id/tvNoListFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/regular"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="Invite Sent Successfully"
                    android:textColor="@color/colorBurned"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/notFounHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:layout_gravity="center_vertical"
                        android:text="@string/your_contacts"
                        android:layout_weight="1"
                        android:textColor="@color/mirage"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/referralInvite"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:background="@drawable/multicolor_background"
                        android:text="@string/referral_invite"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/bebasneue_regular" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewContact"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:spanCount="2"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_notfounduserlist"/>

                <TextView
                    android:id="@+id/tvSuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/regular"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="Referral Sent Successfully"
                    android:textColor="@color/colorBurned"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loadingSpin"
            style="@style/SpinKitView.Large.MultiplePulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            bind:SpinKit_Style="MultiplePulseRing"
            app:SpinKit_Color="@color/sunset_orange" />

    </RelativeLayout>

</layout>
