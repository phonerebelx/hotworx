<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/shape_top_round_fill_white">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loadingSpin"
            style="@style/SpinKitView.Large.MultiplePulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:SpinKit_Color="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:layout_gravity="center_vertical"
                        android:text="@string/registered_member"
                        android:textColor="@color/mirage"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/SendInvite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="end"
                        android:text="@string/send_invite"
                        android:layout_weight="1"
                        android:textColor="@color/sunset_orange"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_below="@id/header_layout"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:spanCount="2"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_registereduserlist"/>

                <TextView
                    android:id="@+id/tvNoListFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/regular"
                    android:visibility="gone"
                    android:text="Invite Sent Successfully"
                    android:textColor="@color/colorBurned"
                    android:textSize="@dimen/_12sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSendReferral"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/multicolor_background"
                    android:layout_gravity="center"
                    android:text="@string/send_invite"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/bebasneue_regular" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorLocationGrey"
                android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue_regular"
                    android:layout_gravity="center_vertical"
                    android:text="@string/your_contacts"
                    android:textColor="@color/mirage"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/referralInvite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="end"
                    android:text="@string/referral_invite"
                    android:layout_weight="1"
                    android:textColor="@color/sunset_orange"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:spanCount="2"
                tools:itemCount="2"
                tools:listitem="@layout/item_notfounduserlist"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSendRequest"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/multicolor_background"
                android:layout_gravity="center"
                android:text="@string/referral_invite"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/bebasneue_regular" />


        </LinearLayout>

    </RelativeLayout>

</layout>