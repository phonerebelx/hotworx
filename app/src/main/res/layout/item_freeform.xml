<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_star_unfilled"/>

        <ImageView
            android:id="@+id/iv_freeform"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_apple"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_freeform"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:text="Chicken Biryani"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/quantity_freeform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Biryani"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/calories_freeform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="610"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorGreen"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorLightGrey"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/colorLightGrey"/>
</RelativeLayout>