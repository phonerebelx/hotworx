<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define your gradient colors -->
    <gradient
        android:startColor="#F15115"
        android:endColor="#F15115"
        android:angle="90" />

    <!-- Add a stroke for the border -->
    <stroke
        android:width="1dp"
        android:color="@color/colorWhite" /> <!-- Border color -->

    <!-- Rounded corners -->
    <corners android:radius="@dimen/_200sdp" /> <!-- Adjust corner radius -->

</shape>