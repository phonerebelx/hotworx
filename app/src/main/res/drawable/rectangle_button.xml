    <!-- Colored rectangle-->
    <item
        android:bottom="-5dp"
        android:top="-5dp"
        android:left="5dp"
        android:right="5dp">
        <rotate android:fromDegrees="5">
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
